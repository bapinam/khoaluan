<script>
    function EditBills(id) {
        $("#HoaDonEdit").val(id);
        GetViewEditHD(id);
    }
     function GetViewEditHD(id) {
                  $.ajax({
                type: "GET",
              url: "@Url.Action("GetBillById")",
              data: {id:id},
                dataType: "json",
                success: function (msg) {
                    SetViewEditHD(msg);
               },
                error: function (req, status, error) {
