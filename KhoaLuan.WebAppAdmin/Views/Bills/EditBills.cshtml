        congTien = congTien.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
        thanhTienTT = thanhTien.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' });
        var str12CT = '<tr>'
