    //GetAddNhanVien,,ajaxNhanVien
    function GetAddNhanVien(id,code)
    {
        $("#idGV").val(id);
        $('#IdResponsible').val(id);
        document.getElementById('ShowNV').innerHTML = code;
        $('#exampleGiaoViec').modal('hide');
    }
</script>