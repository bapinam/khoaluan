<!--Update edit-->
<script>
    function SaveEdit() {
        var id = document.getElementById("idE").value;
        var code = document.getElementById("codeE").value;
        var group = document.getElementById("groupE").value;
        var name= document.getElementById("nameE").value;

        var nameGroup = $('#groupE').find('option:selected').text();

        var clo = document.getElementById("erroGroupE");
        if (group == "Chọn...") {
            clo.style.display = "block";
        } else {
            clo.style.display = "none";
             var bundle =
        {
            Id: document.getElementById("idE").value,
            Code : code,
            Name : name,
            IdProductTypeGroup : group
        };

         $.ajax({
                type: "PUT",
             url: "@Url.Action("Update")",
             data: bundle,
             dataType: "json",
             success: function (msg) {
                 $('#exampleEdit').modal('hide');

                 if (msg.isSuccessed) {
                     toastr.success('Cập nhật thành công!')

                     var maso = "#Code-" + id;
                     var ten = "#Name-" + id;
                     var nhom = "#GroupType-" + id;
                     $(maso).text(code);
                     $(ten).text(name);
                     $(nhom).text(nameGroup);

                 } else {
                     toastr.error('Cập nhật thất bại!')

                 }
                },
                error: function (req, status, error) {
                    toastr.error('Cập nhật thất bại!')
                    $('#exampleEdit').modal('hide');

                }
         });

        }

    }
</script>

<!--delete-->
<script>
    function GetDelete(id) {
        $("#idDelete").val(id);
    }

    function ajaxDelete() {
        var id = document.getElementById("idDelete").value;
        $.ajax({
            type: "DELETE",
            url: "@Url.Action("Delete")",
            data: { Id: id },
             dataType: "json",
             success: function (msg) {
                 var myobj = document.getElementById(id);
                 myobj.remove();
                 $('#exampleDelete').modal('hide');
                 if (msg.isSuccessed) {
                     toastr.success('Xoá thành công!')
                 } else {
                     toastr.error('Xóa thất bại!')
                 }

                },
                error: function (req, status, error) {
                    toastr.error('Xóa thất bại, vì dữ liệu đã tồn tại ở bảng khác')
                }
         });

    }
</script>

