<!--Lấy thông tin edit-->
<script>
    function GetEdit(id) {
        var showT = document.getElementById("erroGroupE");
        var erroT = document.getElementById("erroNameE");
        var btnT = document.getElementById("btnthemE")

        showT.style.display = 'none';
        erroT.style.display = 'none';
        btnT.style.display = 'block';

        $.ajax({
                type: "GET",
                url: "@Url.Action("GetById")",
                data: { id: id },
                dataType: "json",
            success: function (msg) {
                var my = document.getElementById("showGr2");
                my.remove();
                $("#showGr").append(
                    '<div id="showGr2">'+
                    '<select id="groupE" name="GroupType" class="form-control select2bs4" required>' +
                    '</select>' +
                    '</div>');
                $("#idE").val(id);
                $("#codeE").val(msg.code);
                $("#nameE").val(msg.name);
                $("#groupE").append('<option value="'+msg.idGroupType+'">' + msg.groupType + '</option>');
                getId(msg.idGroupType);
                $('.select2bs4').select2({
                    theme: 'bootstrap4'
                })
                },
                error: function (req, status, error) {

                }
            });
    }
</script>
